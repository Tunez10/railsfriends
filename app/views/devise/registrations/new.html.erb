<div class="px-20 py-10 w-full text-sm flex flex-col justify-center">
  <h2 class="text-3xl font-bold mb-8 mx-auto">Sign up</h2>

  <div class="shadow-lg w-1/3 p-10 items-center flex flex-col mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full max-w-md" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-6">
        <div class="flex flex-col">
          <%= f.label :email, class: "mb-1 font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-800" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :password, class: "mb-1 font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500 mb-1">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
                class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-800" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :password_confirmation, class: "mb-1 font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-800" %>
        </div>

        <div>
          <%= f.submit "Sign up",
                class: "w-full bg-gray-800 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-md shadow" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 flex gap-1">
      <p>Already have an account?</p>
     <p class="font-bold hover:underline"> <%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>
