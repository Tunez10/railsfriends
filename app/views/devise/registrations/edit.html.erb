<div class="px-20 py-10 w-full text-sm flex flex-col justify-center">
  <h2 class="text-3xl font-bold mb-8 mx-auto">Edit Profile <% resource_name.to_s.humanize %></h2>

  <div class="shadow-lg w-1/3 p-10 flex flex-col mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "w-full max-w-md" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-6">
        <div class="flex flex-col">
          <%= f.label :email, class: "mb-1 font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-800" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-600">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div class="flex flex-col">
          <%= f.label :current_password, class: "mb-1 font-medium text-gray-700" %>
          <i class="text-xs text-gray-500 mb-1">(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Enter Current password",
                class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-800" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :password, class: "mb-1 font-medium text-gray-700" %>
          <i class="text-xs text-gray-500 mb-1">(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password",
                class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-800" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="flex flex-col">
          <%= f.label :password_confirmation, class: "mb-1 font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-800" %>
        </div>


        <div>
          <%= f.submit "Update",
                class: "w-full bg-gray-800 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-md shadow" %>
        </div>
      </div>
    <% end %>

    <div class="mt-8 w-full">
      <h3 class="text-lg font-bold mb-3">Cancel my account</h3>
      <div class="mb-3 text-gray-600">Unhappy?</div>
      <%= button_to "Cancel my account", registration_path(resource_name),
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
            method: :delete,
            class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-md shadow" %>
    </div>

    <div class="mt-6 w-full">
      <%= link_to "Back", :back,
            class: "w-full block text-center bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded-md shadow" %>
    </div>
  </div>
</div>
